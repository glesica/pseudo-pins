{
  "manifest_version": 2,

  "name": "Pseudo Pins",
  "description": "Keep groups of similar tabs together.",
  "version": "1.0",
  "author": "George Lesica",

  "browser_action": {
    "default_title": "Pseudo Pins",
    "default_icon": "icon19.png",
    "default_popup": "popup.html"
  },

  "background": {
      "scripts": ["eventPage.js"],
      "persistent": false
  },

  "icons": {
      "16": "icon16.png",
      "19": "icon19.png",
      "32": "icon32.png",
      "48": "icon48.png",
      "64": "icon64.png",
      "128": "icon128.png"
  },

  "permissions": [
    "activeTab",
    "tabs",
    "storage"
  ]
}
